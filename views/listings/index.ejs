
<%layout("/Layout/boilerplate.ejs")%>

<style>
    #filters{
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }
    .filters{
        text-align: center;
        margin-right:2rem;
        margin-top: 1rem;
        opacity: 0.7;
    }
    .filters:hover{
        opacity: 1;
        cursor: pointer;
    }
    .filters p{
        font-size: 0.8rem;
    }

    .GST{
        display: none;
    }

    .tax-toggle{
        border: 2px solid black !important; 
        border-radius: 1rem;
        padding: 1rem;
        height: 2.8rem;
        margin-left: auto;
        display: flex;
        align-items: center;
    }

    .rightAngle, .leftAngle{
        height:35px;
        width:35px;
        border: 2px solid black !important; 
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .rightAngle, .leftAngle, .tax-toggle{
        background-color: rgb(231, 229, 229);
    }

    .fa-angles-right{
        font-size:1.5rem;
    }

    .leftAngle{
        font-size:1.5rem;
        margin-right: 2rem;
    }
</style>

<div id="filters">

    <div class="leftAngle">
        <i class="fa-solid fa-angles-left"></i>
    </div>

    <div class="filters">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
    </div>

    <div class="filters">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
    </div>

    <div class="filters">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic cities</p>
    </div>

    <div class="filters">
        <div><i class="fa-solid fa-mountain-sun"></i></div>
        <p>Mountain</p>
    </div>



    <div class="filters">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Pools</p>
    </div>

    <div class="filters">
        <div><i class="fa-solid fa-house"></i></div>
        <p>Cabins</p>
    </div>

    <div class="filters">
        <div><i class="fa-solid fa-snowflake"></i></div>
        <p>Arctic</p>
    </div>

    <div class="filters">
        <div><i class="fa-solid fa-umbrella-beach"></i></div>
        <p>Beach</p>
    </div>

    <div class="filters">
        <div><i class="fa-solid fa-cow"></i></div>
        <p>Farms</p>
    </div>

    <div class="rightAngle">
        <i class="fa-solid fa-angles-right"></i>
    </div>

    <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Display Total Taxes</label>
        </div>
    </div>
</div>


<body>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <% for(listing of listings){ %>
            <a href="/listings/<%=listing._id%>" class="listing-link">
                <div class="card col listing-card">
                    <img src="<%=listing.image.url%>" class="card-img-top" alt="listing_image" style="height: 20rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                      <p class="card-text">
                        <b class="boldTitle"><%=listing.title%></b><br>
                        <b class="boldPrice">&#8377;<%= (listing.price != null ? listing.price.toLocaleString("en-IN") : "N/A")%>/Night</b>
                        <i class="boldPrice GST">&nbsp; &nbsp; +18% GST</i>
                      </p>
                    </div>
                </div>
            </a>
        <%}%>
    </div>
    <script>
        let taxSwitch = document.getElementById("flexSwitchCheckDefault");
        taxSwitch.addEventListener("click", () => {
            //console.log("Button was clicked");
            let taxtInfo = document.getElementsByClassName("GST");
            //console.log(taxtInfo)
            for(info of taxtInfo){
                if(info.style.display != "inline"){
                    info.style.display = "inline";
                }else{
                    info.style.display = "none";
                }
            }
            
        });
    </script>
</body>
